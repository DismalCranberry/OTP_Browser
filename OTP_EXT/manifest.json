{
  "manifest_version": 3,
  "name": "TOTP Generator",
  "version": "1.3",
  "description": "Generate 6-digit TOTP codes from one or more shared secrets",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "RandomCat.png",
    "32": "RandomCat.png",
    "48": "RandomCat.png",
    "128": "RandomCat.png"
  },
  "action": {
    "default_title": "TOTP",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "RandomCat.png",
      "32": "RandomCat.png",
      "48": "RandomCat.png",
      "128": "RandomCat.png"
    }
  }
}
